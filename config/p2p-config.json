{
  "discovery": {
    "enableMDNS": true,
    "enableDHT": true,
    "bootstrapNodes": [],
    "port": 0
  },
  "connection": {
    "maxConnections": 50,
    "heartbeatInterval": 30000,
    "connectionTimeout": 60000
  },
  "security": {
    "requireEncryption": true,
    "verifyPeerIdentity": true,
    "rateLimit": {
      "enabled": true,
      "maxMessagesPerMinute": 100
    }
  },
  "routing": {
    "maxHops": 5,
    "timeout": 30000
  }
}
